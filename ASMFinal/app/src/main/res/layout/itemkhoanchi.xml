<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_margin="5dp"
    card_view:cardElevation="5dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <ImageView
            android:id="@+id/imghinhdep"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/tuiitien"/>
        <TextView
            android:id="@+id/txttenkhoanchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên Khoản"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imghinhdep"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"/>
        <TextView

            android:id="@+id/txtngaychi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/imghinhdep"
            android:layout_below="@+id/txttenkhoanchi"/>
        <TextView

            android:id="@+id/txttienchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiền"
            android:layout_toRightOf="@+id/imghinhdep"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:layout_below="@+id/txtngaychi"/>
        <TextView

            android:id="@+id/txtghichuchi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ghi Chú"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/imghinhdep"
            android:textStyle="bold"
            android:layout_below="@+id/txttienchi"/>
        <TextView

            android:id="@+id/txtmaloai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Loại"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:textColor="#000"
            android:layout_toRightOf="@+id/imghinhdep"
            android:textStyle="bold"
            android:layout_below="@+id/txtghichuchi"/>
        <ImageView
            android:id="@+id/imgedit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/iconedit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>